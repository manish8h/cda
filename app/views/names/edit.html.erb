<h1>Edit Name</h1>

<%= form_with(model: @name, local: true) do |form| %>
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :age %><br>
    <%= form.text_area :age %>
  </p>

  <p>
    <%= form.submit "Update Current Name"%>
  </p>
<% end %>
<%= link_to 'Back', names_path %>